{
    "name": "Slammy",
    "version": "0.2.0",
    "manifest_version": 3,
    "description": "A chrome extension for displaying difficult words' explanations about IT and DX.",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "functions.js"
            ],
            "css": [
                "popup.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "optional_permissions": [],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": { 
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "action": {
        "default_icon": "icon48.png",
        "default_popup": "settings.html"
    },
    "icons" : {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
